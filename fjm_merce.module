function fjm_merce_menu() {
  $items = array();
  $items['home'] = array(
    'title' => t('Home'),
    'page callback' => 'fjm_merce_landing_page',  
    'access arguments' => array('access content'),
    'file' => 'fjm_merce_landing.page.inc',
    'type' => MENU_NORMAL_ITEM,
  );
  return $items;
}

