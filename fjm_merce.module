  return array(
    'fjm_merce_landing' => array(
      'path' => drupal_get_path('module', 'fjm_merce') . '/templates',
      'arguments' => array(
        'menu' => NULL,
        'carousel' => NULL,
        'bio' => NULL,
        'browse' => NULL,
        'search_form' => NULL,
      ),
      'template' => 'fjm_merce_landing_page',
    ),
    'fjm_merce_bio' => array(
      'arguments' => array(
        'text' => NULL,
      ),
    ),
    'fjm_merce_menu' => array(
      'arguments' => array(
        'menu_links' => NULL,
      ),
    ),
    'fjm_merce_browse' => array(
      'arguments' => array(
        'photo_albums' => NULL,
        'recordings' => NULL,
        'press_clippings' => NULL,
      ),
    ),
    'fjm_merce_audio' => array(
      'path' => drupal_get_path('module', 'fjm_merce') . '/templates',
        'arguments' => array(
          'mods_data' => NULL,
        ),
        'template' => 'fjm_merce_audio_object',
    ),
    'fjm_merce_audio_mods' => array(
      'arguments' => array(
        'mods_data' => NULL,
      ),
    ),
  );
}

